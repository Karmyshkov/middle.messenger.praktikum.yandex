{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "---",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack serve",
    "start": "node ./api/server.js",
    "lint:ts": "npx eslint .",
    "lint:style": "npx stylelint \"**/*.css\" --fix",
    "docker": "docker build -t messanger .",
    "prepare": "husky install",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Karmyshkov/middle.messenger.praktikum.yandex.git"
  },
  "author": "Evgeniy Karmyskov <karmyskove@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Karmyshkov/middle.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/Karmyshkov/middle.messenger.praktikum.yandex#readme",
  "devDependencies": {
    "@babel/core": "7.18.13",
    "@babel/preset-env": "7.18.10",
    "@babel/preset-typescript": "7.18.6",
    "@types/jest": "28.1.7",
    "@types/node": "18.7.11",
    "@typescript-eslint/eslint-plugin": "5.34.0",
    "@typescript-eslint/parser": "5.34.0",
    "autoprefixer": "10.4.8",
    "babel-jest": "28.1.3",
    "babel-loader": "8.2.5",
    "clean-webpack-plugin": "4.0.0",
    "css-loader": "6.7.1",
    "cssnano": "5.1.13",
    "eslint": "8.22.0",
    "handlebars": "4.7.7",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "28.1.3",
    "jest-environment-jsdom": "28.1.3",
    "lint-staged": "13.0.3",
    "mini-css-extract-plugin": "2.6.1",
    "mocha": "10.0.0",
    "postcss-loader": "7.0.1",
    "postcss-nested": "5.0.6",
    "stylelint": "14.11.0",
    "stylelint-config-standard": "28.0.0",
    "ts-jest": "28.0.8",
    "ts-loader": "9.3.1",
    "typescript": "4.7.4",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.10.0"
  },
  "dependencies": {
    "core-js": "3.24.1",
    "express": "4.18.1",
    "express-rate-limit": "6.5.1",
    "nanoid": "4.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transformIgnorePatterns": [
      "/node_modules/(?!nanoid)"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "identity-obj-proxy",
      "^core(.*)$": "<rootDir>/src/core$1",
      "^utils(.*)$": "<rootDir>/src/utils$1",
      "^types(.*)$": "<rootDir>/src/types$1",
      "^pages(.*)$": "<rootDir>/src/pages$1",
      "^components(.*)$": "<rootDir>/src/components$1",
      "^img(.*)$": "<rootDir>/src/img$1",
      "^routes(.*)$": "<rootDir>/src/routes$1",
      "^vendor(.*)$": "<rootDir>/src/vendor$1",
      "^api(.*)$": "<rootDir>/src/api$1",
      "^services(.*)$": "<rootDir>/src/services$1"
    }
  },
  "lint-staged": {
    "*.ts": "npm lint:ts",
    "*.css": "npm lint:style"
  }
}
